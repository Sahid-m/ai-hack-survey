// learn more about it in the docs: https://pris.ma/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SurveySession {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Survey metadata
  startTime DateTime @default(now())
  endTime   DateTime?
  completed Boolean  @default(false)
  
  // Relations
  annotations     Annotation[]
  classifications Classification[]
  
  @@map("survey_sessions")
}

model Annotation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Image and session info
  sessionId  String
  imageIndex Int
  imagePath  String
  
  // Bounding box data
  x          Float
  y          Float
  width      Float
  height     Float
  objectType String // deer, rock, bear
  
  // Relations
  session SurveySession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  @@map("annotations")
}

model Classification {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Image and session info
  sessionId  String
  imageIndex Int
  imagePath  String
  
  // Classification data
  rating String // good, bad
  
  // Relations
  session SurveySession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  @@map("classifications")
}
